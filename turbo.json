{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["scripts/*.ts"],
  "tasks": {
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "build": {
      "dependsOn": ["^build", "//#check-package-jsons"]
    },
    "publish": {
      "dependsOn": ["test", "build", "^publish", "//#check-package-jsons"]
    },
    "//#check-package-jsons": {}
  }
}
